local m = peripheral.find("modem") or error("No modem found")
m.open(1384)
local SERVER_ID = 114
print("Client ready. Target: " .. SERVER_ID)
while true do
    m.transmit(SERVER_ID, 1384, "PING")
    local _, _, _, _, msg = os.pullEvent("modem_message")
    if msg == "PONG" then
        print("SUCCESS: Connection OK!")
    end
    sleep(1)
end
